#########################################################################################
# Endpoint        : Radarr
# Port applicatif : 7878
# Host            : teste74.ddns.net
#########################################################################################

Radarr:
    container_name: Radarr
    image: 'hotio/radarr'
    environment:
      PUID: '1001'
      PGID: '74240'
      UMASK: '002'
      ARGS: ''
      DEBUG: 'no'
    volumes:
      - /home/docker/volumes/Radarr:/config

    networks:
      - traefik_network
      
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=traefik_network"
      - "traefik.http.routers.Radarr.tls=true" 
      - "traefik.http.routers.Radarr.tls.certresolver=leresolver" 
      - "traefik.http.routers.Radarr.rule=Host(`teste74.ddns.net`)"       # URL
      - "traefik.http.routers.Radarr.entrypoints=Radarr"                  # Endpoint test
      - "traefik.http.services.Radarr.loadbalancer.server.port=7878"      # nterne de l'application
#########################################################################################
# Endpoint        : Sonarr
# Port applicatif : 8989
# Host            : teste74.ddns.net
#########################################################################################

  Sonarr:
    container_name: Sonarr
    image: 'hotio/sonarr'
    environment:
      PUID: '1001'
      PGID: '74240'
      UMASK: '002'
      ARGS: ''
      DEBUG: 'no'
    volumes:
      - /home/docker/volumes/Sonarr:/config

    networks:
      - traefik_network
      
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=traefik_network"
      - "traefik.http.routers.QBitTorrent.tls=true" 
      - "traefik.http.routers.QBitTorrent.tls.certresolver=leresolver" 
      - "traefik.http.routers.QBitTorrent.rule=Host(`teste74.ddns.net`)"       # URL
      - "traefik.http.routers.QBitTorrent.entrypoints=Sonarr"                  # Endpoint test
      - "traefik.http.services.QBitTorrent.loadbalancer.server.port=8989"      # nterne de l'application
