version: '2.4'
services:
  traefik:
    container_name: 'Traefik'
    restart: unless-stopped
    image: 'traefik:v2.2'
    ports:
      - 5000:8080
      - 80:80
      - 443:443
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /root/traefik/conf/traefik.toml:/traefik.toml:ro
      - /root/traefik/conf/acme.json:/acme.json
