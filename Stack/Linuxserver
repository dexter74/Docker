      - PGID=74240                  #
      - TZ=Europe/Paris             #
    ports:                          #
      - 4040:4040                   #
    volumes:                        #
      - appz:/config                #
      - appz:/music                 #
      - appz:/media                 #
      - appz:/playlists             #
      - appz:/podcasts              #
#####################################



