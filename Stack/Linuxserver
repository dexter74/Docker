# Hebergement Image (DB2 Requise)   #
  Chevereto:                        #
    container_name: Chevereto       #
    image: linuxserver/chevereto    #
    environment:                    #
      - PUID=1001                   #
      - PGID=74240                  #
      - TZ=Europe/Paris             #
    ports:                          #
      - 80:80                       #
      - 443:443                     #
    volumes:                        #
      - chevereto:/config           #
      - chevereto:/data             #
    links:                          #
      - MariaDB:mysql               #
    depends_on:                     #
     - MariaDB                      #
# Database host : mysql             #
