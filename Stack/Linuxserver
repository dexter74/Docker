# https://fleet.linuxserver.io/

#####################################
# Streamer Musique                  #
  Airsonic:                         #
    container_name: Airsonic        #
    image: linuxserver/airsonic     #
    environment:                    #
      - PUID=1001                   #
      - PGID=74240                  #
      - TZ=Europe/Paris             #
    ports:                          #
      - 4040:4040                   #
    volumes:                        #
      - Airsonic:/config            #
      - Airsonic:/music             #
      - Airsonic:/media             #
      - Airsonic:/playlists         #
      - Airsonic:/podcasts          #
#####################################



