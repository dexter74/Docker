#####################################
# Hebergement Image (DB2 Requise)   #
  Chevereto:                        #
    container_name: CN_Chevereto    #
    image: linuxserver/chevereto    #
    environment:                    #
      - PUID=1001                   #
      - PGID=74240                  #
      - TZ=Europe/Paris             #
    ports:                          #
      - 1006:80                     #
      - 443:443                     #
    volumes:                        #
      - chevereto:/config           #
      - chevereto:/data             #
                                    #
    external_links:                 #
      - CN_MariaDB:mysql            #
    depends_on:                     #
     - CN_MariaDB                   #
                                    #
    labels:                         #
       cacher: 'non'                #
                                    #
# Database host : mysql             #
#####################################

#####################################
# Dashboard enregistrer Carburant   #
  Clarkson:                         #
    container_name: CN_Clarkson     #
    image: linuxserver/clarkson     #
    environment:                    #
      - PUID=1001                   #
      - PGID=74240                  #
      - TZ=Europe/Paris             #
      - MYSQL_HOST=mysql            #
      - MYSQL_USERNAME=root         #
      - MYSQL_PASSWORD=root         #
      - ENABLE_REGISTRATIONS=true   #
    ports:                          #
      - 1007:3000                   #
                                    #
    external_links:                 #
      - CN_MariaDB:mysql            #
    depends_on:                     #
     - CN_MariaDB                   #
                                    #
    labels:                         #
       cacher: 'non'                #
                                    #
# Note:                             #
# - Cree a la main la DB 'clarkson' #
# - Cree acces a la DB              #
# - Modifier la configuration       #
#####################################



#####################################
# Interface de Développement WebUi  #
  Cloud9:                           #
    container_name: CN_Cloud9       #
    image: linuxserver/cloud9       #
    environment:                    #
      - PUID=1001                   #
      - PGID=74240                  #
      - USERNAME=admin              #
      - PASSWORD=admin              #
    ports:                          #
      - 1008:8000                   #
    volumes:                        #
      - Cloud9:/code                #
    labels:                         #
       cacher: 'non'                #
