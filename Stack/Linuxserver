#####################################
  MariaDB:                          #
    image: linuxserver/mariadb      #
    container_name: CN_MariaDB      #
    restart: unless-stopped         #
    environment:                    #
      - PUID=1001                   #
      - PGID=74240                  #
      - TZ=Europe/Paris             #
      - MYSQL_ROOT_PASSWORD=root    #
      - MYSQL_DATABASE=database     #
      - MYSQL_USER=admin            #
      - MYSQL_PASSWORD=admin        #
    volumes:                        #
      - MariaDB:/config             #
    labels:                         #
       cacher: 'non'                #
