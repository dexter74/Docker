# Application de calcul Recherche   #
  Boinc:                            #
    container_name: Boinc           #
    image: linuxserver/boinc        #
    environment:                    #
      - PUID=1001                   #
      - PGID=74240                  #
      - TZ=Europe/Paris             #
      - GUAC_USER=admin             #
      - GUAC_PASS=<md5>             #
    ports:                          #
      - 8080:8080                   #
    volumes:                        #
      - boinc:/config               #
