services:  #
############

#########################################################################
# https://hub.docker.com/r/phpmyadmin/phpmyadmin/                       #
  phpmyadmin:                                                           #
    depends_on:                                                         #
      - mysql                                                           #
    network_mode: bridge                                                #
    container_name: phpmyadmin                                          #
    image: phpmyadmin/phpmyadmin                                        #
    restart: always                                                     #
    environment:                                                        #
      PMA_HOST: mysql                                                   #
      PMA_PORT: 3306                                                    #
      PMA_USER: 'admin'                                                 #
      PMA_PASSWORD: 'admin'                                             #
      PMA_PMADB: 'phpmyadmin'                                           #
      PMA_ABSOLUTE_URI: http://drthrax74.ddns.net:81                    #
    external_links:                                                     #
      - mysql                                                           #
    ports:                                                              #
      - 27016:80                                                        #
#########################################################################




