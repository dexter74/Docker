##################################
# Stack: Torrent, Radarr, Sonarr #
##################################

#################
version: '2.4'  #
#################
services: #      
      
########################################################################################################################
  Jackett:
    network_mode: bridge
    restart: unless-stopped
    container_name: Jackett
    hostname: Jackett
    image: 'hotio/jackett'
    environment:
      TZ: 'Europe\Paris'
      AUTO_UPDATE: 'true'
      PUID: 1001
      PGID: 74240
      
    ports:
      - 9117:9117
    volumes:
      - /home/docker/container/jackett/config:/config
      - /home/docker/container/jackett/downloads:/downloads
     
########################################################################################################################
  Sonarr:
    network_mode: bridge
    restart: unless-stopped
    container_name: Sonarr
    hostname: Sonarr
    image: 'linuxserver/sonarr'
    environment:
      TZ: 'Europe\Paris'
      UMASK_SET: '022'
      PUID: 1001
      PGID: 74240
      
    ports:
      - 8989:8989
    volumes:
      - /home/docker/container/sonarr/config:/config
      - /home/docker/container/sonarr/tv:/tv
      - /home/docker/container/sonarr/downloads:/downloads
     
