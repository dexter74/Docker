##################################
# Stack: Torrent, Radarr, Sonarr #
##################################

#################
version: '2.4'  #
#################
services: #
########################################################################################################################
  Torrent:
    restart: unless-stopped
    container_name: Qbitorrent
    hostname: Qbitorrent
    image: 'linuxserver/qbittorrent'
    environment:
      TZ: Europe/Paris
      WEBUI_PORT: 8080
      UMASK_SET: 022
    ports:
      - 8080:8080
    volumes:
      - /home/docker/container/qbitorrent/config:/config
      - /home/docker/container/qbitorrent/downloads:/downloads
      
########################################################################################################################
  Jackett:
    restart: unless-stopped
    container_name: Jackett
    hostname: Jackett
    image: 'linuxserver/jackett'
    links:
      - Torrent
    environment:
      TZ: 'Europe\Paris'
      AUTO_UPDATE: 'true'
    ports:
      - 9117:9117
    volumes:
      - /home/docker/container/jackett/config:/config
      - /home/docker/container/jackett/downloads:/downloads

#######################################################################################################################   
  Radarr:
    restart: unless-stopped
    container_name: Radarr
    hostname: Radarr
    image: 'linuxserver/radarr'
    links:
      - Torrent
    environment:
      TZ: 'Europe\Paris'
      UMASK_SET: '022'
    ports:
      - 7878:7878
    volumes:
      - /home/docker/container/radarr/config:/config
      - /home/docker/container/radarr/movies:/movies
      - /home/docker/container/radarr/downloads:/downloads
      
########################################################################################################################
  Sonarr:
    restart: unless-stopped
    container_name: Sonarr
    hostname: Sonarr
    image: 'linuxserver/sonarr'
    links:
      - Torrent
    environment:
      TZ: 'Europe\Paris'
      UMASK_SET: '022'
    ports:
      - 8989:8989
    volumes:
      - /home/docker/container/sonarr/config:/config
      - /home/docker/container/sonarr/tv:/tv
      - /home/docker/container/sonarr/downloads:/downloads
      
########################################################################################################################
