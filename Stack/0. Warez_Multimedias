# Port 32400, 81:84
# Sonarr et Radarr ne supporte pas le https dans l'indexeur, utiliser des urls en HTTP (local)

##################################################################################################################
# Endpoint        : Plex
# Port applicatif : 32400
# Host            : https://teste74.ddns.net:32400
# Plex Claim      : https://www.plex.tv/claim/
##################################################################################################################
  plex:
    container_name: Plex
    hostname: plex
    domainname: lan
    image: plexinc/pms-docker
    environment:
      PUID: '1001'
      PGID: '74240'
      TZ: 'Europe\Paris'
      PLEX_CLAIM: 'XXXXXXXXXXXXXXXXXX'

    volumes:
      - /home/docker/volumes/Plex/config:/config
      - /home/docker/volumes/Plex/transcode:/transcode
      - /home/docker/volumes/Plex/data:/data
      - Video:/mnt/Video
      - DL:/mnt/DL

    ports:
      - 32400:32400
##################################################################################################################


